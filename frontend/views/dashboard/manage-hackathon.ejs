<div class="dashboard-content">
    <div class="welcome-section">
        <h1>Manage Hackathons</h1>
        <p class="text-muted">View and manage your upcoming hackathons</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Manageable Hackathons</h5>
            <p class="text-muted small">Only hackathons that haven't started and have no participants or judges can be deleted</p>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Hackathon Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="manageableHackathonsTable">
                        <!-- Will be populated dynamically -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteHackathonModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Hackathon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this hackathon? This action cannot be undone.</p>
                <p class="text-danger"><strong>Note:</strong> Only hackathons that haven't started and have no participants or judges can be deleted.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div> 
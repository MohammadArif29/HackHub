<div class="modal fade" id="submitProjectModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Submit Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="submitProjectForm">
                    <input type="hidden" name="hackathonId">
                    <div class="mb-3">
                        <label class="form-label">Project Name</label>
                        <input type="text" class="form-control" name="projectName" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="description" rows="4" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Technologies Used</label>
                        <input type="text" class="form-control" name="technologies" placeholder="e.g., React, Node.js, MongoDB">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">GitHub Link</label>
                        <input type="url" class="form-control" name="githubLink" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Demo Link (Optional)</label>
                        <input type="url" class="form-control" name="demoLink">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Project Screenshots</label>
                        <input type="file" class="form-control" name="screenshots" multiple accept="image/*">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitProject()">Submit Project</button>
            </div>
        </div>
    </div>
</div> 
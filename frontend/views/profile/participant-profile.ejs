<div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header gradient-purple">
        <div class="profile-avatar">
            <img src="<%= user.avatar || 'https://ui-avatars.com/api/?name=' + user.firstName + '+' + user.lastName %>" 
                 alt="Profile Picture">
        </div>
        <div class="profile-info">
            <h1><%= user.firstName %> <%= user.lastName %></h1>
            <p><i class="fas fa-code"></i> Participant</p>
        </div>
    </div>

    <!-- Profile Content -->
    <div class="profile-content">
        <div class="row">
            <!-- Left Column -->
            <div class="col-lg-4">
                <!-- Basic Info Card -->
                <div class="profile-card">
                    <h3>Basic Information</h3>
                    <form id="profileForm">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" value="<%= user.email %>" disabled>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">GitHub Profile</label>
                            <input type="url" class="form-control" value="<%= participant.githubProfile %>" disabled>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">LinkedIn Profile</label>
                            <input type="url" class="form-control" value="<%= participant.linkedinProfile %>" disabled>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bio</label>
                            <textarea class="form-control" rows="3" disabled><%= participant.bio %></textarea>
                        </div>
                    </form>
                </div>

                <!-- Skills Card -->
                <div class="profile-card mt-4">
                    <h3>Skills</h3>
                    <div class="skills-container">
                        <% participant.skills.forEach(skill => { %>
                            <span class="skill-tag"><%= skill %></span>
                        <% }) %>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-8">
                <!-- Statistics Card -->
                <div class="profile-card">
                    <h3>Participation Statistics</h3>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="stat-box gradient-purple">
                                <h4>Hackathons</h4>
                                <p class="stat-number"><%= participant.teams.length %></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box gradient-blue">
                                <h4>Projects</h4>
                                <p class="stat-number"><%= participant.submissions.length %></p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="stat-box gradient-green">
                                <h4>Achievements</h4>
                                <p class="stat-number"><%= participant.achievements.length %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="profile-card mt-4">
                    <h3>Recent Activity</h3>
                    <div class="timeline">
                        <% participant.recentActivity.forEach(activity => { %>
                            <div class="timeline-item">
                                <div class="timeline-icon">
                                    <i class="fas <%= activity.icon %>"></i>
                                </div>
                                <div class="timeline-content">
                                    <p><%= activity.description %></p>
                                    <small><%= formatDate(activity.date) %></small>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 